<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="178dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frame_view"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="@color/dark_blue"
        android:padding="1dp">

        <ImageView
            android:id="@+id/grid_item_image"
            android:layout_width="98dp"
            android:layout_height="78dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:padding="1dp" />

        <ImageView
            android:id="@+id/new_ribbon"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="top|left"
            android:contentDescription="@string/app_name"
            android:scaleType="fitStart"
            android:src="@drawable/new_ribbon"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/yellow_ribbon"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_gravity="top|left"
            android:contentDescription="@string/app_name"
            android:paddingLeft="-1dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_yellow_ribbon"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/news_count"
            style="@style/TextStyleWhite"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            android:background="@drawable/rectangle_with_boarder"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="15sp"
            android:visibility="invisible" />
    </FrameLayout>

    <ImageView
        android:id="@+id/rlv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-23dp"
        android:adjustViewBounds="true"
        android:contentDescription="@+id/image"
        android:scaleType="fitXY"
        android:src="@drawable/down_arrow" />

    <RelativeLayout
        android:id="@+id/rlv1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/frame_view"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rectangle">

        <TextView
            android:id="@+id/text_distance"
            style="@style/TextBlack"
            android:layout_width="60dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:background="@drawable/round_distance"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textSize="14sp" />

        <com.iproject.tapstor.library.AutoResizeTextView
            android:id="@+id/text"
            style="@style/TextStyleWhite"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:background="#000000"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>